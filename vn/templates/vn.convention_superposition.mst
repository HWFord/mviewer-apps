{{#features}}
	<li class="item" style="width:238px;">
		<h3 class="title-feature">{{nom}}</h3>
		<p class="text-feature">	
			{{#localisation}}                
				<span style="font-family:'roboto_bold'"> Localisation :</span> {{localisation}}<br/>
			{{/localisation}}                
			{{#beneficiaire}}                
				<span style="font-family:'roboto_bold'"> Bénéficiaire :</span> {{beneficiaire}}<br/>
			{{/beneficiaire}}                
			{{#date_effet}}                
				<span style="font-family:'roboto_bold'"> Date effet :</span> {{date_effet}}<br/>
			{{/date_effet}}                
			{{#date_echeance}}                
				<span style="font-family:'roboto_bold'"> Date échéance :</span> {{date_echeance}}<br/>
			{{/date_echeance}}                
			{{#remarque}}                
				<span style="font-family:'roboto_bold'"> Remarques :</span> {{remarque}}<br/>
			{{/remarque}}                
			{{#lien_pdf}}                
			<div id="button_link">
				<a href="{{lien_pdf}}" target="_blank" style="color:#ffffff;">
					<div class="button" style="background-color:#72487f;">
						<img src="apps/region/global/img/icon_pdf.svg" style="width:13%;margin-right:4%;">Convention
					</div>
				</a>
			</div>
			{{/lien_pdf}}                

       </p>


	</li>
{{/features}}

<style>
	.title-feature {
		color: #032e46;
		font-family:"roboto_bold";
		font-size:23px;
		margin-bottom:1%;
		line-height:1;
	}
	.subtitle-feature {
		color: #032e46;
		font-family:"roboto_bold";
		font-size:18px;
		margin-top:7%;
		line-height:1;
	}
	.text-feature{
		font-family:"roboto_regular";
		color:#555;
		font-size:13px;
		margin-top:10%;
	}
	.info.N {
   		background-image: url(http://kartenn.region-bretagne.fr/doc/transports/icons/non_1.png);
   		background-size: 16px;
    	background-repeat: no-repeat;
   	    background-position-x: 0px;
   	    margin-bottom:3px;
	}
	.info.O {
   		background-image: url(http://kartenn.region-bretagne.fr/doc/transports/icons/oui.png);
   		background-size: 16px;
    	background-repeat: no-repeat;
   	    background-position-x: 0px;
   	    margin-bottom:3px;
	}
	.but_link{
	    padding:10px 0 10px 0;
	    font-size:13px;
	    font-family:'roboto_regular', Arial, Sans-serif;
	   	background:rgba(3, 46, 70, 0.9);
	    color:#fff;
	    width:100px;
	    border:1px solid #032e46;
	    margin-left: 25%;
	}
	.but_link:hover{
	    background:rgba(3, 46, 70, 1);
	    border:1px solid #032e46;
	}
	.but_link p{
	  margin: 0;
	  text-align:center;
	  color:#fff;
	} 
	.but_link a{
	  color: #fff;
	}
	.but_link a:hover{
	  color:#fff;
	}
	.but_link a:focus{
	  color:#fff; 
	}

</style>