{{#features}}
	<li class="item">
		<h3 class="title-feature">{{nom}}</h3>
		<p class="text-feature">	
			<span style="font-family:'roboto_bold'"> Commune :</span> {{commune}}<br/>		
			{{#proprietaire}}     			
				<span style="font-family:'roboto_bold'"> Propri√©taire :</span> {{proprietaire}}<br/>
			{{/proprietaire}}                
			{{#concession}}     			
				<span style="font-family:'roboto_bold'"> Concessionnaire :</span> {{concession}}<br/>
			{{/concession}}                
			{{#gestionnaire}}     			
				<span style="font-family:'roboto_bold'"> Gestionnaire :</span> {{gestionnaire}}<br/>
			{{/gestionnaire}}  
			<span style="font-family:'roboto_bold'"> Nombre de places de corps morts :</span> {{pl_cor_mo}}<br/>		
			<span style="font-family:'roboto_bold'"> Nombre de places de pontons :</span> {{pl_ponton}}<br/>		
			<span style="font-family:'roboto_bold'"> Nombre de places totales :</span> {{pl_total}}<br/>		
			
			{{#remarque}}                
				<span style="font-family:'roboto_bold'"> Remarques :</span> {{remarque}}<br/>
			{{/remarque}}                
       </p>


	</li>
{{/features}}

